package recfun

object Main {
  def main(args: Array[String]) {
    println("Pascal's Triangle")
    for (row <- 0 to 10) {
      for (col <- 0 to row)
        print(pascal(col, row) + " ")
      println()
    } 
    //println(pascal(5, 2))
  }

  /**
   * Exercise 1
   */
    def pascal(r: Int, c: Int): Int = 
    if(c == 0 || r == 0 || c == r) 1
    else pascal(c-1, r-1) + pascal(c-1, r)
  
